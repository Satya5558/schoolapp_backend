{
  "name": "schoolapp",
  "version": "1.0.0",
  "description": "This is the backend of schoolapp",
  "main": "server.ts",
  "type": "commonjs",
  "scripts": {
    "tsc": "tsc",
    "postinstall": "npm run tsc",
    "start:dev": "export NODE_ENV=development && nodemon --exec ts-node ./src/server.ts",
    "start:debug": "export NODE_ENV=debug && node --inspect ./dist/server.js",
    "start:prod": "export NODE_ENV=production && npm run copy-schemas && node ./dist/server.js",
    "copy-schemas": "cp -R ./src/schema ./dist/",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "School",
    "management",
    "system"
  ],
  "author": "Satya",
  "license": "ISC",
  "dependencies": {
    "app-root-path": "^3.1.0",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-validator": "^7.0.1",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.3.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pm2": "^6.0.8",
    "sequelize": "^6.37.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.2.5",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.13.1",
    "@typescript-eslint/parser": "^8.23.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^0.0.0",
    "jest": "^29.7.0",
    "sequelize-cli": "^6.6.2",
    "superagent": "^8.1.2",
    "supertest": "^6.3.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  }
}
